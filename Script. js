function addapps() {
    var input = document.getElementById("AppsInput");
    var AppsName = input.value.trim();
    
    if (AppsName !== "") {
      var ul = document.getElementById("appsList");
      var li = document.createElement("li");
      li.textContent = appsName;
      
      li.addEventListener("click", function() {
        ul.removeChild(li);
      });
      
      var deleteIcon = document.createElement("span");
      deleteIcon.textContent = "‚ùå"; 
      deleteIcon.classList.add("delete-icon");
      
      li.appendChild(deleteIcon);
      ul.appendChild(li);
      input.value = "";
    } else {
      alert("Please enter a Apps name!");
    }
  }
